
@model _23DH112807_MyStore.Models.Product
<head>
    <style>
        img {
            height: 150px;
            max-width: 200px;
        }
    </style>
</head>

<div class="container-fluid">
    <div class="dl-horizontal">
        <div class="col-md-4">
            <img src=" @Html.DisplayFor(modelItem => Model.ProductImage)" />
        </div>
        <div class="col-md-8">
            <dl>
                <dt>Tên sản phẩm</dt>
                <dd> @Html.DisplayFor(model => model.ProductName) @*chữ model nhìn ở mấy chỗ này nè*@ </dd>

                <dt> Đơn giá</dt>
                <dd>@Html.DisplayFor(model => model.ProductPrice) </dd>

                <dt>Mô tả</dt>
                <dd> @Html.DisplayFor(model => model.ProductDescription) </dd>

                <dt>Danh mục</dt>
                <dd> @Html.DisplayFor(model => model.Category.CategoryName)</dd>
            </dl>
        </div>
    </div>
